    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend: Run Unit Tests",
            "command": "npx nyc --reporter=lcov npm run test",
            "request": "launch",
            "cwd": "${fileDirname}/../backend/",
            "type": "node-terminal"
        },
        {
            "name": "Dart: Run Unit Tests",
            "type": "dart",
            "request": "launch",
            "program": "./frontend/test/",
            "args": [
                "--coverage",
                "--dart-define=FIREBASE_ENABLED=false",
                "--dart-define=BASE_URL=http://192.168.43.199:3000/api"
            ]
        },
        {
            "name": "Frontend: Run Integration Tests",
            "type": "dart",
            "request": "launch",
            "program": "./frontend/integration_test/",
            "args": [
                "-v",
                "--dart-define=FIREBASE_ENABLED=false",
                "--dart-define=BASE_URL=http://192.168.43.199:3000/api"
            ]
        },
        {
            "name": "Frontend (dev)",
            "cwd": "frontend",
            "request": "launch",
            "type": "dart",
            "args": [
                "-v",
                "--dart-define=FIREBASE_ENABLED=true",
                "--dart-define=BASE_URL=http://192.168.43.199:3000/api"
            ]
        },
        {
            "name": "Frontend (ci)",
            "cwd": "frontend",
            "request": "launch",
            "type": "dart",
            "args": [
                "-v",
                "--dart-define=FIREBASE_ENABLED=false",
                "--dart-define=BASE_URL=http://10.0.2.2:3000/api"
            ]
        },
        {
            "name": "Frontend (prod)",
            "cwd": "frontend",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define=FIREBASE_ENABLED=true",
                "--dart-define=BASE_URL=http://10.0.2.2:3000/api"
            ]
        }
    ]
}