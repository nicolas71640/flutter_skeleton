    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend: Run Unit Tests",
            "command": "npx nyc --reporter=lcov npm run test",
            "request": "launch",
            "cwd": "${fileDirname}/../backend/",
            "type": "node-terminal"
        },
        {
            "name": "Frontend: Launch App",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart"
        },
        {
            "name": "Frontend: Run Unit Tests",
            "type": "dart",
            "request": "launch",
            "program": "./frontend/test/",
            "args": [
                "--coverage",
                "--dart-define=FIREBASE_ENABLED=false",
                "--dart-define=BASE_URL=http://192.168.43.199:3000/api"
            ]
        },
        {
            "name": "Frontend: Run Integration Tests",
            "type": "dart",
            "request": "launch",
            "program": "./frontend/integration_test/",
            "toolArgs": [
                "-v",
                "--dart-define=FIREBASE_ENABLED=false",
                "--dart-define=BASE_URL=http://192.168.43.199:3000/api"
            ]
        },
        {
            "name": "Run",
            "type": "dart",
            "request": "launch",
            "program": "./frontend/integration_test/",
            "codeLens": {
                "for": [
                    "run-test",
                    "run-test-file"
                ]
            },
            "toolArgs": [
                "-v",
                "--dart-define=FIREBASE_ENABLED=false",
                "--dart-define=BASE_URL=http://192.168.43.199:3000/api"
            ]
        },
        {
            "name": "Debug",
            "type": "dart",
            "request": "launch",
            "program": "./frontend/integration_test/",
            "codeLens": {
                "for": [
                    "debug-test",
                    "debug-test-file"
                ]
            },
            "toolArgs": [
                "-v",
                "--dart-define=FIREBASE_ENABLED=false",
                "--dart-define=BASE_URL=http://192.168.43.199:3000/api"
            ]
        }
    ]
}