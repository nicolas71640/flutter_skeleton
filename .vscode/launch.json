{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "envFile": "/workdspaces/flutter_skeleton/tools/env.env",
    "configurations": [
        {
            "name": "Frontend: Launch App",
            "type": "dart",
            "request": "launch",
            "program": "frontend/lib/main.dart",
            "toolArgs": [
                "-v",
                "--dart-define=FIREBASE_ENABLED=false",
                "--dart-define=BASE_URL=${env:SERVER_BASE_URL}"
            ]
        },
        {
            "name": "Frontend: Run Unit Tests",
            "type": "dart",
            "request": "launch",
            "program": "./frontend/test/",
            "args": [
                "-v",
                "--coverage",
                "--dart-define=FIREBASE_ENABLED=false",
                "--dart-define=BASE_URL=${env:SERVER_BASE_URL}"
            ]
        },
        {
            "name": "Frontend: Run Integration Tests",
            "type": "dart",
            "request": "launch",
            "program": "./frontend/integration_test/tests",
            "toolArgs": [
                "-v",
                "--dart-define=FIREBASE_ENABLED=false",
                "--dart-define=BASE_URL=${env:SERVER_BASE_URL}"
            ]
        },
        {
            "name": "Run",
            "type": "dart",
            "request": "launch",
            "program": "./frontend/integration_test/",
            "codeLens": {
                "path": "integration_test/",
                "for": [
                    "run-test",
                    "run-test-file"
                ]
            },
            "toolArgs": [
                "-v",
                "--dart-define=FIREBASE_ENABLED=false",
                "--dart-define=BASE_URL=${env:SERVER_BASE_URL}"
            ]
        },
        {
            "name": "Debug",
            "type": "dart",
            "request": "launch",
            "program": "./frontend/integration_test/",
            "codeLens": {
                "for": [
                    "debug-test",
                    "debug-test-file"
                ]
            },
            "toolArgs": [
                "-v",
                "--dart-define=FIREBASE_ENABLED=false",
                "--dart-define=BASE_URL=${env:SERVER_BASE_URL}"
            ]
        },

        {
            "name": "Run",
            "type": "dart",
            "request": "launch",
            "program": "./frontend/test",
            "codeLens": {
                "path": "/frontend/test/",
                "for": [
                    "run-test",
                    "run-test-file"
                ]
            },
            "toolArgs": [
                "-v",
                "--coverage",
            ]
        },
    ]
}